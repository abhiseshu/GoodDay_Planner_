<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weekitemid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border"
    android:padding="5dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.25"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/weekdateid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:paddingEnd="3dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Monday 30,Nov" />

        <TextView
            android:id="@+id/mood_weather_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:textStyle="bold|italic"
            tools:text="Cloudy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/event_week1"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/borderevent"
            android:padding="3dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/event_week2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/borderevent"
            android:padding="3dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/event_week3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/borderevent"
            android:padding="3dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

<!--        <TextView-->
<!--            android:id="@+id/event_week4"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text=".." />-->

    </LinearLayout>

    <ImageView
        android:id="@+id/mood_pic_weather_id"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_weight="2"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/main_temp_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="12 C" />

        <TextView
            android:id="@+id/feel_temp_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="12 C" />

    </LinearLayout>

</LinearLayout>


